option_settings:
  aws:elasticbeanstalk:application:environment:
    # Database Configuration
    DB_CONNECTION: mysql
    DB_HOST: edufairuzullah-db.ctou2eooyy86.ap-southeast-2.rds.amazonaws.com
    DB_PORT: '3306'
    DB_DATABASE: edufairuzullah-db
    # IMPORTANT: Replace these with your actual RDS credentials
    # You can set these via AWS Console or eb setenv command instead
    # DB_USERNAME: your_username_here
    # DB_PASSWORD: your_password_here
    
    # Application Configuration (update as needed)
    APP_ENV: production
    APP_DEBUG: 'false'
    # APP_KEY: your_app_key_here
    # APP_URL: https://your-domain.com

container_commands:
  03_clear_config_cache:
    command: php artisan config:clear
    ignoreErrors: true

  04_cache_config:
    command: php artisan config:cache
    ignoreErrors: false

